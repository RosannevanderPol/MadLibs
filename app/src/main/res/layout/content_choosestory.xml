<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.rosanne.madlibs.choosestory"
    android:background="@drawable/achtergr">

    <TextView android:text="Choose a subject for your story" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_marginTop="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/choosestory"
        android:textColor="#550c59" />
    <RadioGroup
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/radioGroup">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job"
            android:textSize="20sp"
            android:padding="5dp"
            android:id="@+id/simple"
            android:onClick="onRadioButtonClicked"
            android:textColor="#550c59" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tarzan"
            android:textSize="20sp"
            android:padding="5dp"
            android:id="@+id/tarzan"
            android:onClick="onRadioButtonClicked"
            android:textColor="#550c59" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="University"
            android:textSize="20sp"
            android:padding="5dp"
            android:id="@+id/university"
            android:onClick="onRadioButtonClicked"
            android:textColor="#550c59" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clothes"
            android:textSize="20sp"
            android:padding="5dp"
            android:id="@+id/clothes"
            android:onClick="onRadioButtonClicked"
            android:textColor="#550c59" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dance"
            android:textSize="20sp"
            android:padding="5dp"
            android:id="@+id/dancer"
            android:onClick="onRadioButtonClicked"
            android:textColor="#550c59"
            android:contextClickable="false" />
    </RadioGroup>

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Next step"
    android:id="@+id/button2"
    android:layout_marginBottom="48dp"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:onClick="NextstepClicked" />
</RelativeLayout>
